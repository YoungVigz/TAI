<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/ProjektGabrielGaleza">

    <!-- Wyłączenie zapisu sesji (to musi zostać!) -->
    <Manager pathname="" />

    <!-- Link do Bazy Logowania -->
    <ResourceLink name="jdbc/SecurityDB"
                  global="jdbc/SecurityDB"
                  type="javax.sql.DataSource" />

    <!-- Link do Bazy Projektów -->
    <ResourceLink name="jdbc/BusinessDB"
                  global="jdbc/BusinessDB"
                  type="javax.sql.DataSource" />

    <!-- Realm korzysta z linku lokalnego "jdbc/SecurityDB" -->
    <Realm className="org.apache.catalina.realm.DataSourceRealm"
           dataSourceName="jdbc/SecurityDB"
           userTable="users" 
           userNameCol="username" 
           userCredCol="password"
           userRoleTable="user_roles" 
           roleNameCol="role_name"/>
</Context>